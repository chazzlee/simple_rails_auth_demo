<!DOCTYPE html>
<html>
  <head>
    <title>AuthDemo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <% if !current_user.nil? %>
      <ul>
        <li>Logged in as: <%= current_user.username %></li>
        <li>
          <%= button_to 'Logout', session_path, method: :delete %>
        </li>
      </ul>
    <% end %>

    <% if flash[:notice] %>
      <div>
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
